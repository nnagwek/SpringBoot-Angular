package codility.examples;

import java.util.Arrays;

public class PermMissingElement {

	public static void main(String[] args) {
		
		int[] A= { 1,2,3,5};
		int missing_element = fastSolution(A);
//		int missing_element = solution(A);
		System.out.println(missing_element);
	}
	public static int solution(int[] A) {
		boolean found = false;
		int element_found = 0 ;
		int len = A.length;
		Arrays.sort(A);
		for(int i=1; i<=(len+1); i++) {
			int res = Arrays.binarySearch(A, i); 
			  
	        boolean test = res >= 0 ? true : false ;
			if(test==true) {
				continue;
			}
			else {
				element_found = i;
				break;
			}
		}
		return element_found;
	}
	public static int fastSolution(int[] A) {
		int sum1 = Arrays.stream(A).sum();
		int len = A.length +1;
		int sum2 = (len * (len +1))/2;
		return sum2 - sum1;
	}
	public static int fastSolution2(int[] A) {
		
		int sum1 = 0;
		for(int i : A) {
			sum1 = sum1 +i;
		}
		int len = A.length +1;
		int sum2 = (len * (len +1))/2;
		return sum2 - sum1;
	}
}
